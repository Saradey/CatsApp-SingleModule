<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imvCat"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/ic_cat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/splash_screen_title"
        android:textColor="@color/orange_title"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/imvCat"
        app:layout_constraintStart_toStartOf="@+id/imvCat"
        app:layout_constraintTop_toBottomOf="@+id/imvCat" />

</androidx.constraintlayout.widget.ConstraintLayout>